//
//注册教师
//
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">高校智慧宿舍系统</view>
</cu-custom>
 <view class="cu-bar justify-left bg-white">
    <view class="action border-title">
      <text class="text-xl text-bold">教师注册</text>
      <text class="bg-grey" style="width:2rem"></text>
      <!-- 底部样式 last-child选择器-->
    </view>
  </view>
  <form>
    <view class="cu-form-group margin-top">
      <view class="title">授权编号</view>
      <input placeholder="获取请联系管理员" bindinput="cipher"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">姓名</view>
      <input bindinput="teacherName"></input>
    </view>
     <view class="cu-form-group">
      <view class="title">手机</view>
      <input bindinput="phone"></input>
      <view class="cu-capsule radius">
        <view class="cu-tag bg-blue">
          +86
        </view>
        <view class="cu-tag line-blue">
          中国大陆
        </view>
      </view>
    </view>
    <view class="cu-form-group">
      <view class="title">密码</view>
      <input bindinput="password"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">确认密码</view>
      <input bindinput="confirmPass"></input>
    </view>
    <view class="padding flex flex-direction">
      <button class="cu-btn bg-blue lg" bindtap="registerBtn">确认注册</button>
    </view>
  </form>